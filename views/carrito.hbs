  <div class="Container">
    <div class="row">
     {{#each carrito}}
  <div class="rounded cart shadow p-3 mb-5 bg-body rounded">
      <div class="row no-gutters">
        <div class="col-md-8">
          <div class="product-details mr-2">
            <div class="d-flex flex-row align-items-center">
            <i class="fa fa-long-arrow-left"></i><span class="ml-2">Carrito {{carritos.id}}</span></div>
            <hr>
            <h6 class="mb-0">Detalle Compra</h6>
            {{#each carrito.productos}}
            <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
						<div class="d-flex flex-row"><img class="rounded" src=" ${{carrito.productos.foto}}" width="40">
							<div class="ml-2"><span class="font-weight-bold d-block">{{carrito.productos.nombre}}</span>
              <span class="spec">{{carrito.productos.detalle}}</span></div>
						</div>
						<div class="d-flex flex-row align-items-center"><span class="d-block">2</span>
            <span class="d-block ml-5 font-weight-bold">${{carrito.productos.precio}}</span>
            <i class="fa fa-trash ml-3 text-black-50" onclick="eliminarProductoCarrito({{carrito.productos.id}},{{carrito.id}})"></i></div>
                    
            </div>
              {{else}}  
                    <span class="ml-2">Sin Productos</span>
                {{/each}}
                
        {{/each}}
        </div>
          </div>
          <div class="col-md-4 summary">
            <div>
                <h5><b>Resumen de Compra</b></h5>
            </div>
            <hr>
            <div class="row">
                <div class="col" style="padding-left:0;">{{productoslength}</div>
                <div class="col text-right">{{total}}</div>
            </div>            
            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">TOTAL</div>
                <div class="col text-right">{{total}}</div>
            </div> <button class="btn btn-success">PAGAR</button>
        </div>
        </div>
        
        </div>
        
      </div>
    </div>
</div>

<script src="js/productos.js"></script>